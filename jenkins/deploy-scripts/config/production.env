# Production Environment Configuration
APP_PORT=5000
REPLICAS=3
MEMORY_LIMIT="2Gi"
CPU_LIMIT="2000m"
DOMAIN="calculator.company.com"

# Production-specific settings
DEBUG=false
LOG_LEVEL=WARNING
FLASK_ENV=production

# Database (use environment variables for sensitive data)
DB_HOST=prod-db.company.com
DB_PORT=5432
DB_NAME=calculator_prod
DB_USER=calc_prod_user
# DB_PASSWORD should be set as environment variable

# Redis
REDIS_HOST=prod-redis.company.com
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD should be set as environment variable

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=15
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true

# Load Balancer
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=10

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
CORS_ORIGINS="https://calculator.company.com"

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Auto-scaling
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=3
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
