# Staging Environment Configuration
APP_PORT=5000
REPLICAS=2
MEMORY_LIMIT="1Gi"
CPU_LIMIT="1000m"
DOMAIN="staging-calculator.company.com"

# Staging-specific settings
DEBUG=false
LOG_LEVEL=INFO
FLASK_ENV=staging

# Database
DB_HOST=staging-db.company.com
DB_PORT=5432
DB_NAME=calculator_staging
DB_USER=calc_staging_user

# Redis
REDIS_HOST=staging-redis.company.com
REDIS_PORT=6379
REDIS_DB=0

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# Load Balancer
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
